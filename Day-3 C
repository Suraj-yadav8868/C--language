#include <stdio.h>

int main()
{
    int choice, subChoice, month;

    /* -------------------------------------------------
       1. Telecom Call Service Conversation
       Using Nested Switch Case
    ------------------------------------------------- */

    printf("\n1) Telecom Call Service\n");
    printf("Press 1 for English\n");
    printf("Press 2 for Hindi\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);

    switch(choice)
    {
        case 1:
            printf("\nEnglish Selected\n");
            printf("Press 1 for Balance Enquiry\n");
            printf("Press 2 for Data Plans\n");
            printf("Enter your choice: ");
            scanf("%d", &subChoice);

            switch(subChoice)
            {
                case 1:
                    printf("Your balance is Rs. 50\n");
                    break;

                case 2:
                    printf("Data plan: 1.5GB/day @ Rs.299\n");
                    break;

                default:
                    printf("Invalid choice\n");
            }
            break;

        case 2:
            printf("\nHindi Selected\n");
            printf("Balance jankari ke liye 1 dabaye\n");
            printf("Data plan ke liye 2 dabaye\n");
            printf("Apna vikalp chune: ");
            scanf("%d", &subChoice);

            switch(subChoice)
            {
                case 1:
                    printf("Aapka balance Rs. 50 hai\n");
                    break;

                case 2:
                    printf("Data plan: 1.5GB/day @ Rs.299\n");
                    break;

                default:
                    printf("Galat vikalp\n");
            }
            break;

        default:
            printf("Invalid language choice\n");
    }

    /* -------------------------------------------------
       2. Print Month Name Using Switch Case
    ------------------------------------------------- */

    printf("\n\n2) Print Month Name\n");
    printf("Enter month number (1-12): ");
    scanf("%d", &month);

    switch(month)
    {
        case 1:  printf("January"); break;
        case 2:  printf("February"); break;
        case 3:  printf("March"); break;
        case 4:  printf("April"); break;
        case 5:  printf("May"); break;
        case 6:  printf("June"); break;
        case 7:  printf("July"); break;
        case 8:  printf("August"); break;
        case 9:  printf("September"); break;
        case 10: printf("October"); break;
        case 11: printf("November"); break;
        case 12: printf("December"); break;

        default:
            printf("Invalid Month Number");
    }

    return 0;
}
