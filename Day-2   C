#include <stdio.h>

int main() {

    int i, n, sum = 0, fact = 1;

    // 1. Print 1 to 10 using while loop
    i = 1;
    printf("\n1) Numbers from 1 to 10:\n");
    while (i <= 10) {
        printf("%d ", i);
        i++;
    }

    // 2. Print 10 to 1 using while loop
    i = 10;
    printf("\n\n2) Numbers from 10 to 1:\n");
    while (i >= 1) {
        printf("%d ", i);
        i--;
    }

    // 3. Print 1 to N using while loop
    printf("\n\n3) Enter N to print 1 to N: ");
    scanf("%d", &n);
    i = 1;
    while (i <= n) {
        printf("%d ", i);
        i++;
    }

    // 4. Print N to 1 using while loop
    printf("\n\n4) Numbers from N to 1:\n");
    i = n;
    while (i >= 1) {
        printf("%d ", i);
        i--;
    }

    // 5. Print odd numbers from 1 to N
    printf("\n\n5) Odd numbers from 1 to N:\n");
    i = 1;
    while (i <= n) {
        if (i % 2 != 0)
            printf("%d ", i);
        i++;
    }

    // 6. Print even numbers from N to 1
    printf("\n\n6) Even numbers from N to 1:\n");
    i = n;
    while (i >= 1) {
        if (i % 2 == 0)
            printf("%d ", i);
        i--;
    }

    // 7. Find leap years from 2000 to 3000
    printf("\n\n7) Leap years from 2000 to 3000:\n");
    i = 2000;
    while (i <= 3000) {
        if ((i % 400 == 0) || (i % 4 == 0 && i % 100 != 0)) {
            printf("%d ", i);
        }
        i++;
    }

    // 8. Sum from 1 to N
    sum = 0;
    i = 1;
    while (i <= n) {
        sum += i;
        i++;
    }
    printf("\n\n8) Sum from 1 to N = %d", sum);

    // 9. Factorial of N
    fact = 1;
    i = 1;
    while (i <= n) {
        fact *= i;
        i++;
    }
    printf("\n\n9) Factorial of %d = %d", n, fact);

    // 10. Multiplication table of N
    printf("\n\n10) Multiplication table of %d:\n", n);
    i = 1;
    while (i <= 10) {
        printf("%d x %d = %d\n", n, i, n * i);
        i++;
    }

    return 0;
}
